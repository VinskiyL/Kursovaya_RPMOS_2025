<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Обложка книги -->
        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/cardview_light_background"
            android:contentDescription="@string/book_cover"
            app:srcCompat="@drawable/ic_book_placeholder" />

        <!-- Информация о книге -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Автор -->
            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_author"
                android:textSize="16sp"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Жанр и год -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/bookGenre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/book_genre"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/bookYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_year"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <!-- Индекс и место -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/bookIndex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/book_index"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/bookVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_volume"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>

            <!-- Место издания -->
            <TextView
                android:id="@+id/bookPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_place"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Статус -->
            <TextView
                android:id="@+id/bookStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Кнопка подробнее -->
            <Button
                android:id="@+id/detailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:layout_marginTop="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>